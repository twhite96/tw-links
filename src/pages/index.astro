---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import SocialIcon from '../components/SocialIcon.astro';
import '@fontsource/fira-code';
---

<Layout title="tiff's links">
	<main>
	  <div>
	    <img src="https://res.cloudinary.com/twhiteblog/image/upload/ar_1:1,bo_0px_solid_rgb:ffffff,c_fill,co_rgb:ffffff,g_auto,q_100,r_max,w_399/v1674171747/factoryofsadness_neon_background_portrait_81ad677b-151c-4ef9-8cb0-d1fccd9a5e1c_cklgdp.webp" />
	  </div>
		<h1>tiff's <span class="text-gradient">links</span></h1>
		<p class="intro">
			Your least favorite dev's least favorite dev.
		</p>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://tiffanywhite.dev/"
				title="Blog"
        icon="simple-icons:ghost" color="#15171A"
				body="My very opinionated thoughts on software."
			/>
			<Card
				href="https://www.tiffanywhite.dev/tag/shorts/"
				title="Shorts"
        icon="simple-icons:ghost" color="#15171A"
				body="Short notes about things I've found or read."
			/>
			<Card
				href="https://www.tiffanywhite.com"
				title="Personal Site"
        icon="carbon:portfolio" color="#2db4eb"
				body="My portfolio site rewritten with Next.js and hosted on Vercel."
			/>
			<Card
				href="https://resume.tiffanyrwhite.com/"
				title="My resume"
        icon="mdi:file-document-outline" color="#ff1493"
				body="My CV rewritten with Astro.js."
			/>
			<Card
      href="https://tiffnotes.dev/"
