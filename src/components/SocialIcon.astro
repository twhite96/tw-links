---
import Icon from 'astro-icon';

export interface Props {
  url: string;
  icon: string;
  label: string;
}

const { url, icon, label } = Astro.props;
---

<a
  href={url}
  class="hover:text-sky-400 dark:text-white dark:hover:text-sky-300"
  aria-label={label}
  rel="noopener"
>
  <Icon class="h-5" name={icon} />
</a>